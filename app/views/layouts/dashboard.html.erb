<% content_for :content do %>

  <%= render "shared/nav" %>

  <main class="grid grid-cols-1 md:grid-cols-3 xl:grid-cols-4 gap-5 md:gap-10 lg:gap-20">

    <aside class="md:col-span-1">
      <div class="flex md:flex-col disable-scrollbars overflow-y-hidden overflow-x-scroll justify-start px-5 md:px-0 gap-3 lg:gap-2 md:mb-3">
        <%= link_to '/feed/add-feed-select-source', class: 'flex flex-row-reverse flex-1 group items-center justify-end gap-3 bg-indigo-500 text-white font-bold pr-5 rounded-lg py-2 hover:bg-indigo-600 hover:transition hover:scale-100 hover:ease-in-out hover:duration-150 leading-snug' do %>
          Website or RSS feed
          <div class="p-3 group-hover:scale-150 group-hover:transition group-hover:duration-150  group-hover:ease-in-out bg-white/5 z-30 rounded-full  ">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v2H7a1 1 0 100 2h2v2a1 1 0 102 0v-2h2a1 1 0 100-2h-2V7z" clip-rule="evenodd"></path>
            </svg>
          </div>
        <% end %>
        <%= link_to root_path, class: 'flex flex-row-reverse flex-1 group items-center justify-end gap-3 bg-red-500 text-white font-bold pr-5 rounded-lg py-2 hover:bg-red-600 hover:transition hover:scale-100 hover:ease-in-out hover:duration-150 leading-snug' do %>
          Youtube channel
          <div class="p-3 group-hover:scale-150 group-hover:transition group-hover:duration-150  group-hover:ease-in-out bg-white/5 z-30 rounded-full  ">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v2H7a1 1 0 100 2h2v2a1 1 0 102 0v-2h2a1 1 0 100-2h-2V7z" clip-rule="evenodd"></path>
            </svg>
          </div>
        <% end %>
        <%= link_to root_path, class: 'flex flex-row-reverse flex-1 group items-center justify-end gap-3 bg-purple-500 text-white font-bold pr-5 rounded-lg py-2 hover:bg-purple-600 hover:transition hover:scale-100 hover:ease-in-out hover:duration-150 leading-snug' do %>
          Instagram profile
          <div class="p-3 group-hover:scale-150 group-hover:transition group-hover:duration-150  group-hover:ease-in-out bg-white/5 z-30 rounded-full  ">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v2H7a1 1 0 100 2h2v2a1 1 0 102 0v-2h2a1 1 0 100-2h-2V7z" clip-rule="evenodd"></path>
            </svg>
          </div>
        <% end %>
      </div>
      <div class="hidden md:block">
        <div class="flex lg:flex-row gap-3">
          <%= link_to '/pages/import', class: 'btn-icon' do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"></path>
            </svg>
            <span class="hidden lg:block">Import</span>
          <% end %>
          <%= link_to '/pages/export', class: 'btn-icon' do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
            </svg>
            <span class="hidden lg:block">Export</span>
          <% end %>
        </div>
      </div>
      <div class="hidden md:block md:fixed md:bottom-5 md:max-w-xs">
        <div class="flex justify-between items-start flex-wrap  gap-3">
          <div class="flex gap-3">
            <%= link_to '', class: 'w-12 h-12 group block p-2 rounded-xl hover:bg-white border flex items-center justify-center hover:scale-110 hover:transition-all' do %>
              <%= image_tag('chrome.png', srcset: { 'chrome@2x.png' => '2x' }, alt: 'Download extension for Google Chrome', class: 'grayscale mix-blend-multiply opacity-50 group-hover:grayscale-0 group-hover:opacity-100') %>
            <% end %>
            <%= link_to '', class: 'w-12 h-12 group block p-2 rounded-xl hover:bg-white border flex items-center justify-center hover:scale-110 hover:transition-all' do %>
              <%= image_tag('firefox.png', srcset: { 'firefox@2x.png' => '2x' }, alt: 'Download extension for Firefox', class: 'grayscale mix-blend-multiply opacity-50 group-hover:grayscale-0 group-hover:opacity-100') %>
            <% end %>
            <%= link_to '/pages/bookmarklet', class: 'w-12 h-12 group block p-2 rounded-xl hover:bg-white border flex items-center justify-center hover:scale-110 hover:transition-all' do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 stroke-slate-400 group-hover:stroke-slate-700"
                   fill="none"
                   viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/>
              </svg>
            <% end %>

          </div>
        </div>
      </div>
    </aside>
    <div class="md:col-span-2 xl:col-span-3 space-y-5 px-5 md:px-0">
      <%= yield %>
    </div>
  </main>
<% end %>

<%= render template: "layouts/application" %>